<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.Usage.NullableType.ExplicitNullableTypes" />
	</rule>
	<rule ref="MediaWiki.Arrays.TrailingComma">
		<properties>
			<property name="singleLine" value="false" />
			<property name="multiLine" value="true" />
		</properties>
	</rule>
	<file>.</file>
	<exclude-pattern>cypress/*</exclude-pattern>
	<arg name="extensions" value="php"/>
	<arg name="encoding" value="UTF-8"/>
</ruleset>
