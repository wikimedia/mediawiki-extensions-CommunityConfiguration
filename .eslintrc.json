{
	"root": true,
	"extends": [
		"wikimedia/mediawiki"
	],
	"rules": {
		"no-implicit-globals": "off"
	},
	"env": {
		"commonjs": true
	},
	"ignorePatterns": [
		"coverage/**"
	],
	"overrides": [
		{
			"files": "resources/**/*.vue",
			"extends": [
				"wikimedia/client-common",
				"wikimedia/vue3-es6"
			],
			"rules": {
				"max-len": "off",
				"template-curly-spacing": "off",
				"vue/component-name-in-template-casing": [
					"error",
					"kebab-case"
				],
				"vue/max-len": [
					"error",
					{
						"code": 120,
						"template": 120,
						"comments": 120
					}
				]
			}
		},
		{
			"files": [
				"resources/**/*.js"
			],
			"extends": [
				"wikimedia/client-es6"
			],
			"rules": {
				"template-curly-spacing": "off"
			}
		},
		{
			"files": [
				"**/*.test.js"
			],
			"env": {
				"jest": true
			},
			"extends": [
				"wikimedia/server"
			],
			"rules": {
				"es-x/no-array-prototype-includes": "off",
				"es-x/no-rest-spread-properties": "off",
				"es-x/no-async-functions": "off",
				"template-curly-spacing": "off"
			}
		},
		{
			"files": [
				"jest.setup.js"
			],
			"extends": [
				"wikimedia/server"
			]
		}
	]
}
