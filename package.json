{
	"name": "community-configuration",
	"private": true,
	"scripts": {
		"fix": "npm-run-all fix:*",
		"fix:js": "eslint --fix .",
		"fix:css": "stylelint --fix \"**/*.{css,less,vue}\"",
		"test": "npm-run-all test:*",
		"test:lint": "eslint --cache --no-fix --max-warnings 0 .",
		"test:lintcss": "stylelint \"**/*.{css,less,vue}\"",
		"test:linti18n": "banana-checker i18n/",
		"test:jest": "jest",
		"coverage": "npm run test:jest"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.23.9",
		"@vue/compiler-dom": "3.4.19",
		"@vue/test-utils": "2.4.4",
		"@vue/vue3-jest": "29.2.6",
		"@wikimedia/codex": "1.7.0",
		"eslint": "8.57.0",
		"eslint-config-wikimedia": "0.28.2",
		"grunt-banana-checker": "0.13.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"jest-fail-on-console": "^3.3.0",
		"npm-run-all": "4.1.5",
		"stylelint": "15.11.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-wikimedia": "0.16.1",
		"vue": "3.4.27"
	},
	"eslintIgnore": [
		"vendor/**"
	]
}
